global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
  - job_name: 'node-exporter'
    static_configs:
      - targets: ['node-exporter:9100']
  - job_name: 'cadvisor'
    static_configs:
      - targets: ['cadvisor:8080']
  - job_name: 'budget-app'
    metrics_path: /metrics
    static_configs:
      - targets: ['budget-app:80']
  - job_name: 'wordpress'
    metrics_path: /metrics
    static_configs:
      - targets: ['wordpress:80']
